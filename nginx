# Nginx Configuration for Letters to Likhah (Production)
# Place this in /etc/nginx/sites-available/letters-to-likhah

# Cache configuration
proxy_cache_path /var/cache/nginx/letters levels=1:2 keys_zone=letters_cache:10m max_size=1g inactive=60m use_temp_path=off;

# Backend upstream
upstream backend {
    server 127.0.0.1:10000;
    keepalive 32;
}

# HTTPS Server
server {
    listen 443 ssl http2;
    server_name likhah.whisttle.cloud www.likhah.whisttle.cloud;

    # SSL Configuration (managed by Certbot)
    ssl_certificate /etc/letsencrypt/live/likhah.whisttle.cloud/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/likhah.whisttle.cloud/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Strict-Transport-Security "max-age=63072000" always;

    # Max upload size
    client_max_body_size 50M;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml application/json application/javascript application/rss+xml application/atom+xml image/svg+xml;

    # Frontend - serve React static files
    root /srv/uwsgi/whisttle/letters-to-likhah/frontend/dist;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    # Backend API - proxy /api to FastAPI
    location /api/ {
        proxy_pass http://backend/api/;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";

        # Cache API responses (gallery, posts)
        proxy_cache letters_cache;
        proxy_cache_valid 200 5m;
        proxy_cache_key "$scheme$request_method$host$request_uri";
        proxy_cache_use_stale error timeout updating http_500 http_502 http_503 http_504;
        add_header X-Cache-Status $upstream_cache_status;

        # Skip cache for auth endpoints
        proxy_cache_bypass $http_authorization;
    }

    # API Documentation
    location /docs {
        proxy_pass http://backend/docs;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /redoc {
        proxy_pass http://backend/redoc;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /openapi.json {
        proxy_pass http://backend/openapi.json;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    # Vite build assets - immutable hashed files
    location /assets/ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Static files caching
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot|webp|avif)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Security: deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}

# HTTP to HTTPS redirect
server {
    listen 80;
    server_name likhah.whisttle.cloud www.likhah.whisttle.cloud;

    # Redirect all HTTP to HTTPS
    if ($host = www.likhah.whisttle.cloud) {
        return 301 https://$host$request_uri;
    }

    if ($host = likhah.whisttle.cloud) {
        return 301 https://$host$request_uri;
    }

    return 404;
}